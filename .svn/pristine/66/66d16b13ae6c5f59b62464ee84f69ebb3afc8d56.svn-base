<Window x:Name="windowCustomer" x:Class="RRSoftwares.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RRSoftwares"
        mc:Ignorable="d" ResizeMode="CanMinimize"
        Title="Customer" Height="450" Width="800"  Icon="Icon1.ico" Closed="windowCustomer_Closed">

    <Grid x:Name="btnAddBranch1">


        <GroupBox Header="Add New Branch" HorizontalAlignment="Left" Height="192" Margin="27,206,0,0" VerticalAlignment="Top" Width="736"/>


        <GroupBox Header="Add New Customer" HorizontalAlignment="Left" Height="179" Margin="27,10,0,0" VerticalAlignment="Top" Width="736"/>


        <Label x:Name="___No_Name_" Content="Customer Name: " HorizontalAlignment="Left" Margin="79,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAddCustomerName" HorizontalAlignment="Left" Height="23" Margin="204,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAddCustomerName" Content="Add Customer" HorizontalAlignment="Left" Margin="151,130,0,0" VerticalAlignment="Top" Width="117" Click="btnAddCustomerName_Click" Height="21"/>
        <DataGrid x:Name="dataGridCustomer" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="157" Margin="536,26,0,0" VerticalAlignment="Top" Width="195"/>
        <Label x:Name="___No_Name__Copy" Content="Customer Name: " HorizontalAlignment="Left" Margin="71,249,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbCustomer" HorizontalAlignment="Left" Margin="214,249,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="___No_Name__Copy1" Content="Branch Name: " HorizontalAlignment="Left" Margin="72,287,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddBranch" Content="Add Branch" HorizontalAlignment="Left" Margin="178,329,0,0" VerticalAlignment="Top" Width="75" Click="btnAddBranch_Click"/>
        <DataGrid x:Name="dataGridBranch" HorizontalAlignment="Left" Height="155" Margin="426,230,0,0" VerticalAlignment="Top" Width="325"/>
        <TextBox x:Name="txtBranchName" HorizontalAlignment="Left" Height="23" Margin="214,287,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
