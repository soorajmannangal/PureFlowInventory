<Window x:Class="RRSoftwares.NewTransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RRSoftwares"
        mc:Ignorable="d"
        Title="NewTransaction" Height="450" Width="800">
    <Grid>
        <Label Content="Customer" HorizontalAlignment="Left" Margin="116,50,0,0" VerticalAlignment="Top" Width="114"/>
        <ComboBox x:Name="cmbCustomer" HorizontalAlignment="Left" Margin="253,53,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbCustomer_SelectionChanged"/>
        <Label Content="Branch" HorizontalAlignment="Left" Margin="115,97,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.27,0.374"/>
        <ComboBox x:Name="cmbBranch" HorizontalAlignment="Left" Margin="253,100,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Product Category" HorizontalAlignment="Left" Margin="114,148,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbProductCategory" HorizontalAlignment="Left" Margin="255,151,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbProductCategory_SelectionChanged"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Margin="113,190,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbProduct" HorizontalAlignment="Left" Margin="255,193,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="116,17,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpDate" HorizontalAlignment="Left" Margin="252,17,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblLeafCount" Content="Leaf Count" HorizontalAlignment="Left" Margin="121,241,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLeafCount" HorizontalAlignment="Left" Height="23" Margin="255,241,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Book Count" HorizontalAlignment="Left" Margin="122,277,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBookCount" HorizontalAlignment="Left" Height="23" Margin="258,281,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="txtAmount" Content="Price" HorizontalAlignment="Left" Margin="466,241,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAmount1" HorizontalAlignment="Left" Height="23" Margin="544,241,0,0" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Details" HorizontalAlignment="Left" Margin="466,281,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDetails" HorizontalAlignment="Left" Height="23" Margin="544,281,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="258,333,0,0" VerticalAlignment="Top" Width="75" Click="btnSubmit_Click"/>
        <Label x:Name="lblProductDescription" Content="" HorizontalAlignment="Left" Margin="466,193,0,0" VerticalAlignment="Top" Width="198"/>

    </Grid>
</Window>
