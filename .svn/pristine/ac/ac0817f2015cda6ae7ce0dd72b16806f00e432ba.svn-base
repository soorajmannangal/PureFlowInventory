<Window x:Class="RRSoftwares.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RRSoftwares"
        mc:Ignorable="d" ResizeMode="CanMinimize"
        Title="Product Management" Height="450" Width="790.403"  Icon="Icon1.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="336*"/>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Add New Product" HorizontalAlignment="Left" Height="212" Margin="36,191,0,0" VerticalAlignment="Top" Width="706" Grid.ColumnSpan="2"/>

        <GroupBox Header="Add New Product Category" HorizontalAlignment="Left" Height="166" Margin="36,16,0,0" VerticalAlignment="Top" Width="706" Grid.ColumnSpan="2"/>
        <Label Content="Catogery Name" HorizontalAlignment="Left" Margin="97,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCatogery" HorizontalAlignment="Left" Height="23" Margin="219,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="136"/>
        <Button Content="Add Product Catogery" HorizontalAlignment="Left" Margin="153,119,0,0" VerticalAlignment="Top" Width="140" Click="btnProductCategory_Click"/>
        <Label Content="Catogery Name" HorizontalAlignment="Left" Margin="94,223,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.959,5.705"/>
        <ComboBox x:Name="cmbCatogery" HorizontalAlignment="Left" Margin="216,223,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Margin="94,270,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtProductName" HorizontalAlignment="Left" Height="23" Margin="216,274,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="94,316,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Height="23" Margin="216,316,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add Product" HorizontalAlignment="Left" Margin="150,357,0,0" VerticalAlignment="Top" Width="140" Click="btnAddProduct_Click"/>
        <DataGrid x:Name="dgCatogery" HorizontalAlignment="Left" Height="141" Margin="488,30,0,0" VerticalAlignment="Top" Width="238" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="dgProduct" HorizontalAlignment="Left" Height="187" Margin="488,212,0,0" VerticalAlignment="Top" Width="238" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
